extends pug_content/templates/main_template

prepend title
    | Login

block content
    .row
        .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
            form#loginForm(action="#")
                fieldset
                    h2 Sign In
                    hr.colorgraph
                    .form-group
                        label Username
                        input#username.form-control
                    .form-group
                        label Password
                        input#password.form-control(type='password', required=true)
                    .row
                        .col-xs-6
                            a(href='#') Forgot password?
                        .col-xs-6
                            .checkbox-inline.pull-right
                                label.form-check-label
                                    input.form-check-input(type="checkbox")
                                    | &nbsp;Stay signed in
                    hr.colorgraph
                    .row
                        #buttonHolder.col-xs-12.col-sm-6.col-sm-offset-6
                            // span#loginButton.btn.btn-lg.btn-success.btn-block Login
                            a.btn.btn-lg.btn-success.btn-block(href="index.html") Login
